# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
NEXT_PUBLIC_DEFAULT_MODEL=gpt-5-mini-2025-08-07
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_RETRY_DELAY=1000

# Image Optimization Settings
NEXT_PUBLIC_ENABLE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=0.92
NEXT_PUBLIC_MAX_WIDTH=3000
NEXT_PUBLIC_MAX_HEIGHT=3000
NEXT_PUBLIC_MIN_WIDTH=1200
NEXT_PUBLIC_MIN_HEIGHT=900
NEXT_PUBLIC_MAX_FILE_SIZE=4194304
NEXT_PUBLIC_CONTRAST_ENHANCEMENT=true

# Caching Configuration
NEXT_PUBLIC_ENABLE_CACHE=true
NEXT_PUBLIC_CACHE_MAX_AGE=300000
NEXT_PUBLIC_CACHE_MAX_ENTRIES=100

# Validation Settings
NEXT_PUBLIC_ENABLE_VALIDATION=true
NEXT_PUBLIC_STRICT_VALIDATION=false
NEXT_PUBLIC_MIN_CONFIDENCE=0.7
NEXT_PUBLIC_MAX_AMOUNT=100000

# Performance & Features
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_PROGRESS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true